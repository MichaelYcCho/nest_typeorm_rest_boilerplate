{
    "name": "nest_typeorm_rest_boilerplate",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "typeorm": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=dev nest build --webpack --webpackPath webpack-hmr.config.js --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "db:generate": "read -p \"Migration Name(No Blank) : \" file_name && npm run typeorm -- migration:generate src/database/migrations/$file_name -d ./src/config/datasource.ts",
        "db:migrate": "npm run typeorm -- migration:run -d src/config/datasource.ts",
        "db:revert": "npm run typeorm -- migration:revert -d src/config/datasource.ts",
        "docker:typeorm": "ts-node /app/boilerplate/node_modules/typeorm/cli.js",
        "docker:db:migrate": "npm run docker:typeorm -- migration:run -d /app/boilerplate/dist/config/datasource.js",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "cross-env NODE_ENV=test  jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:unit": "cross-env NODE_ENV=test  jest --config ./jest-unit.config.js",
        "test:e2e": "cross-env NODE_ENV=test  jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/cache-manager": "^2.3.0",
        "@nestjs/common": "^10.4.15",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.4.15",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/platform-express": "^10.4.15",
        "@nestjs/swagger": "^8.1.0",
        "@nestjs/throttler": "^6.3.0",
        "@nestjs/typeorm": "^10.0.2",
        "bcrypt": "^5.1.1",
        "cache-manager-ioredis": "^2.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.7",
        "express-basic-auth": "^1.2.1",
        "joi": "^17.13.3",
        "nest-winston": "^1.9.7",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.9",
        "@nestjs/schematics": "^10.2.3",
        "@nestjs/testing": "^10.4.15",
        "@types/cache-manager": "^4.0.6",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.2",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.18.2",
        "@typescript-eslint/parser": "^8.18.2",
        "cache-manager": "^5.7.6",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "run-script-webpack-plugin": "^0.2.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.2",
        "webpack": "^5.97.1",
        "webpack-node-externals": "^3.0.0"
    },
    "jest": {
        "rootDir": "src",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1",
            "^auth/(.*)$": "<rootDir>/auth/$1",
            "^config/(.*)$": "<rootDir>/config/$1",
            "^core/(.*)$": "<rootDir>/core/$1",
            "^users/(.*)$": "<rootDir>/users/$1"
        },
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "node_modules",
            ".entity.ts",
            ".constants.ts"
        ]
    }
}
